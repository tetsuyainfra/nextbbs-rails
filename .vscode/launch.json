  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Rails Server for rdebug-ide",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/bin/rails",
      "args": ["server"],
      "useBundler": true,
    },
    {
      "name": "Debug Rails test file for rdebug-ide",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/bin/rails",
      "args": ["test", "${file}"],
      "useBundler": true,
    }
  ]
}