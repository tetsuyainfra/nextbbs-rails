<%= form_with(model: @form, url: topics_path) do |form| %>
  <% if @form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
        <% @form.errors.full_messages.each do |message| %>
