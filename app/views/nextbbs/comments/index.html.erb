<p id="notice"><%= notice %></p>

<h1>Comments</h1>
<h2>トピックタイトル<%= @topic.title %></h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Body</th>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.name %></td>
        <td><%= comment.body %></td>
        <td><%= comment.topic_id %></td>
        <td><%= link_to 'Show', topic_comment_path(@topic, comment) %></td>
        <td><%= link_to 'Edit', edit_topic_comment_path(@topic, comment) %></td>
        <td><%= link_to 'Destroy', topic_comment_path(@topic, comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_topic_comment_path(@topic) %>
<br>
<%= link_to 'Back Topic index', topics_path %>
